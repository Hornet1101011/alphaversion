# Example environment variables for server
# Copy this to `.env` in the server root and fill the values (DO NOT commit secrets).

# MongoDB connection string (use the Atlas connection string you copied).
# If your password contains special characters, URL-encode them (e.g. @ -> %40)
MONGODB_URI=mongodb+srv://<db_user>:<password>@cluster0.mongodb.net/alphaversion?retryWrites=true&w=majority

# Port your Node app will listen on
PORT=5000

# Node environment: set to production on Hostinger
NODE_ENV=development

# JWT secret used for signing tokens
JWT_SECRET=your_jwt_secret_here

# Email/SMTP settings (if you use email features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=supersecret

# Optional: frontend base URL if needed (used in emails, callbacks)
FRONTEND_URL=http://yourdomain.com
